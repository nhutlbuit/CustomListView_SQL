<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/re_out"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nhutl.sqlexample.activity.FlashLight" >

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_black"
        android:layout_below="@+id/btn_black"
        android:layout_marginTop="50dp"
        android:background="#FFFF00"
        android:text="_"
        android:textColor="#FFFF00" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_yellow"
        android:layout_below="@+id/btn_yellow"
        android:background="#0000FF"
        android:text="_"
        android:textColor="#0000FF" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_blue"
        android:layout_below="@+id/btn_blue"
        android:background="#FF0000"
        android:text="_"
        android:textColor="#FF0000" />
    
    

    <Button
        android:id="@+id/btn_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_yellow"
        android:layout_below="@+id/btn_black"
        android:background="#FFFFFF"
        android:text="_"
        android:textColor="#FFFFFF" />
    
    <Button
        android:id="@+id/btn_cyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_red"
        android:layout_below="@+id/btn_red"
        android:background="#00FF00"
        android:text="_"
        android:textColor="#00FF00" />

    <Button
        android:id="@+id/btn_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_red"
        android:layout_below="@+id/btn_red"
        android:layout_marginTop="45dp"
        android:background="#FF00FF"
        android:text="_"
        android:textColor="#FF00FF" />

    <Button
        android:id="@+id/btn_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="72dp"
        android:background="#000000"
        android:text="_"
        android:textColor="#000000" />

</RelativeLayout>